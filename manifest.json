{
  "manifest_version": 3,
  "name": "NaniKani",
  "version": "1.0.0",
  "description": "NaniKani - Hide statistics on WaniKani lessons and reviews",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
    //   "16": "icons/icon16.png",
    //   "32": "icons/icon32.png",
    //   "48": "icons/icon48.png",
    //   "128": "icons/icon128.png"
    }
  },
  "icons": {
    // "16": "icons/icon16.png",
    // "32": "icons/icon32.png",
    // "48": "icons/icon48.png",
    // "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.wanikani.com/*",
        "https://wanikani.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_start"
    }
  ]
}
