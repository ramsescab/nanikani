{
  "manifest_version": 3,
  "name": "NaniKani",
  "version": "0.1",
  "description": "NaniKani - Hide statistics on WaniKani lessons and reviews",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.wanikani.com/*",
        "https://wanikani.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_start"
    }
  ]
}
